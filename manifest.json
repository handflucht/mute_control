{
    "manifest_version": 3,
    "name": "Mute Control",
    "version": "1.0.0",
    "description": "Mute new tabs based on user preference.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/mute-icon16.png",
      "32": "icons/mute-icon32.png",
      "48": "icons/mute-icon48.png",
      "128": "icons/mute-icon128.png"
    }
  }
  